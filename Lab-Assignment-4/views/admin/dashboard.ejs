<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>

    <div class="admin-sidebar">
        <h2><i class="fa-solid fa-lock"></i> Admin Panel</h2>
        <a href="/admin" class="active"><i class="fa-solid fa-box"></i> Products</a>
        <a href="/"><i class="fa-solid fa-earth-americas"></i> Visit Website</a>
    </div>

    <div class="admin-content">
        <h1>Product Management</h1>
        <p>Manage your store inventory below.</p>

        <a href="/admin/product/new" class="btn-admin btn-create">+ Add New Product</a>

        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product=> { %>
                    <tr>
                        <td>
                            <i class="<%= product.iconClass %>"></i>
                            <strong>
                                <%= product.name %>
                            </strong>
                        </td>
                        <td>
                            <%= product.category %>
                        </td>
                        <td>$<%= product.price %>
                        </td>
                        <td>
                            <a href="/admin/product/edit/<%= product._id %>" class="btn-admin btn-edit">Edit</a>
                            <a href="/admin/product/delete/<%= product._id %>" class="btn-admin btn-delete"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

</body>

</html>
