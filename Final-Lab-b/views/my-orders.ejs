<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>My Orders</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            .history-box {
                max-width: 800px;
                margin: 50px auto;
            }

            .status-placed {
                background-color: #cff4fc;
                color: #055160;
            }
        </style>
</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Be IT:SERVICE</a>
            <a href="/" class="btn btn-sm btn-outline-secondary">Back to Home</a>
        </div>
    </nav>

    <div class="container history-box">
        <h2 class="text-center mb-4">Track Your Orders</h2>

        <div class="card p-4 shadow-sm mb-4">
            <form action="/my-orders" method="POST" class="d-flex gap-2">
                <input type="email" name="email" class="form-control" placeholder="Enter your email address..."
                    required>
                <button type="submit" class="btn btn-primary px-4">Find</button>
            </form>
        </div>

        <% if (error) { %>
            <div class="alert alert-warning text-center">
                <%= error %>
            </div>
            <% } %>

                <% if (orders && orders.length> 0) { %>
                    <div class="card p-4 shadow-sm">
                        <h4 class="mb-3">Order History</h4>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order=> { %>
                                        <tr>
                                            <td><small class="font-monospace text-muted">
                                                    <%= order._id %>
                                                </small></td>
                                            <td>
                                                <%= order.date.toDateString() %>
                                            </td>
                                            <td>
                                                <span class="badge rounded-pill status-placed">
                                                    <%= order.status %>
                                                </span>
                                            </td>
                                            <td class="text-end fw-bold">$<%= order.total %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <% } %>
    </div>

</body>

</html>