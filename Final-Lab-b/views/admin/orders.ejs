<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Manage Orders</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/admin">Admin Dashboard</a>
            <a href="/" class="btn btn-outline-light btn-sm">View Website</a>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Order Lifecycle Manager</h2>
            <a href="/admin" class="btn btn-secondary">Back to Products</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Total</th>
                            <th>Current Status</th>
                            <th>Action (Next Step)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders.length> 0) { %>
                            <% orders.forEach(order=> { %>
                                <tr>
                                    <td><small class="text-muted">
                                            <%= order._id %>
                                        </small></td>
                                    <td>
                                        <div><strong>
                                                <%= order.email %>
                                            </strong></div>
                                        <small>
                                            <%= order.contact %>
                                        </small>
                                    </td>
                                    <td>$<%= order.total %>
                                    </td>
                                    <td>
                                        <% if (order.status==='Placed' ) { %>
                                            <span class="badge bg-secondary">Placed</span>
                                            <% } else if (order.status==='Processing' ) { %>
                                                <span class="badge bg-warning text-dark">Processing</span>
                                                <% } else { %>
                                                    <span class="badge bg-success">Delivered</span>
                                                    <% } %>
                                    </td>
                                    <td>
                                        <% if (order.status==='Placed' ) { %>
                                            <form action="/admin/order/update-status/<%= order._id %>" method="POST">
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    Move to Processing <i class="fa-solid fa-arrow-right"></i>
                                                </button>
                                            </form>
                                            <% } else if (order.status==='Processing' ) { %>
                                                <form action="/admin/order/update-status/<%= order._id %>"
                                                    method="POST">
                                                    <button type="submit" class="btn btn-sm btn-info text-white">
                                                        Move to Delivered <i class="fa-solid fa-truck"></i>
                                                    </button>
                                                </form>
                                                <% } else { %>
                                                    <span class="text-success"><i class="fa-solid fa-check-double"></i>
                                                        Completed</span>
                                                    <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-4">No orders found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>